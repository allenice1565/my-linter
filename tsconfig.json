{
    "compilerOptions": {
        "types": ["node", "vitest/globals"],
        "noImplicitAny": true,
        "lib": ["ESNext"],
        "target": "ES6",
        "allowJs": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowArbitraryExtensions": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "include": ["src/**/*", "tests/**/*", "./rollup.config.ts"],
    "exclude": ["node_modules", "lib/**/*"]
}
