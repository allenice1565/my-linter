{
    "compilerOptions": {
        "types": ["node"],
        "noImplicitAny": true,
        "lib": ["ESNext"],
        "target": "ES6",
        "allowJs": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowArbitraryExtensions": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib/**/*"]
}
